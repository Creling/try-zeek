#!/bin/sh
VER=$1

export BRO_DNS_FAKE=1

cd /brostuff/*/ || exit 1
opts=""

if [ -e file.pcap ]; then
    opts="-r file.pcap"
fi


chown nobody . *
mv main.bro trybro.bro
su -s /bin/sh nobody -c "/usr/bin/timeout -k 2 30 /bro-${VER}/bin/bro -C $opts ./trybro.bro > stdout.log 2> stderr.log"

#remove harmless message
grep -v 'problem initializing NB-DNS' stderr.log > tmp.log
mv tmp.log stderr.log
